{
  "name": "tag-jumper",
  "displayName": "Tag Jumper",
  "description": "Quickly jump between tags and attributes in HTML, HTX, JSX, and TSX files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "tag-jumper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "tag-jumper.jumpForwardTag",
        "title": "Tag Jumper: Jump Forward Through Element Tags"
      },
      {
        "command": "tag-jumper.jumpBackwardTag",
        "title": "Tag Jumper: Jump Backward Through Element Tags"
      }
    ],
    "keybindings": [
      {
        "command": "tag-jumper.jumpForwardTag",
        "key": "ctrl+super+alt+down",
        "when": "editorTextFocus && editorLangId =~ /(html|htx|jsx|tsx)/"
      },
      {
        "command": "tag-jumper.jumpBackwardTag",
        "key": "ctrl+super+alt+up",
        "when": "editorTextFocus && editorLangId =~ /(html|htx|jsx|tsx)/"
      }
    ],
    "__plannedKeybindings": [
      {
        "command": "tag-jumper.jumpForwardAttribute",
        "key": "ctrl+super+alt+right",
        "when": "editorTextFocus && editorLangId =~ /(html|htx|jsx|tsx)/",
        "note": "Planned: Move forward through element attributes"
      },
      {
        "command": "tag-jumper.jumpBackwardAttribute",
        "key": "ctrl+super+alt+left",
        "when": "editorTextFocus && editorLangId =~ /(html|htx|jsx|tsx)/",
        "note": "Planned: Move backward through element attributes"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test --extensionDevelopmentPath=. --extensionTestsPath=./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "lru-cache": "^7.18.3"
  }
}
